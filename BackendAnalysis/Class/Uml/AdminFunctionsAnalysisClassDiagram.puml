@startuml AdminFunctionsAnalysisClassDiagram

' Lớp biên cho các giao diện quản trị
package "Boundary Classes" {
    class AdminDashboardUI {
        + out_WelcomeMessage
        + sub_ManageUsers
        + sub_ManageRecipes
        + sub_ManagePlans
        + sub_ManageGoals
        + sub_ManageLogs
    }

    class UserManagementUI {
        + out_UserList
        + sub_AddUser
        + sub_EditUser
        + sub_DeleteUser
    }

    class UserFormUI {
        + in_Username
        + in_Email
        + in_Password
        + in_FullName
        + in_Role
        + sub_Submit
    }

    class RecipeManagementUI {
        + out_RecipeList
        + sub_AddRecipe
        + sub_EditRecipe
        + sub_DeleteRecipe
    }

    class RecipeFormUI {
        + in_RecipeName
        + in_Description
        + in_Ingredients
        + in_Instructions
        + in_NutritionInfo
        + sub_Submit
    }
}

' Lớp điều khiển cho logic nghiệp vụ
package "Control Classes" {
    class AdminController {
        + showDashboard()
        + manageUsers()
        + manageRecipes()
        + addUser(userInfo)
        + updateUser(userId, userInfo)
        + deleteUser(userId)
        + addRecipe(recipeInfo)
        + updateRecipe(recipeId, recipeInfo)
        + deleteRecipe(recipeId)
    }
}

' Lớp thực thể cho các đối tượng dữ liệu
package "Entity Classes" {
    class User {
        - username
        - email
        - password
        - fullName
        - role
        + save()
        + update(userInfo)
        + delete()
        + static findById(userId)
        + static findAll()
    }

    class Recipe {
        - name
        - description
        - ingredients
        - instructions
        - nutritionInfo
        + save()
        + update(recipeInfo)
        + delete()
        + static findById(recipeId)
        + static findAll()
    }

    class Plan {
        ' ... attributes
    }

    class Goal {
        ' ... attributes
    }

    class LogEntry {
        ' ... attributes
    }
}

' Định nghĩa quan hệ
AdminDashboardUI ..> AdminController
UserManagementUI ..> AdminController
UserFormUI ..> AdminController
RecipeManagementUI ..> AdminController
RecipeFormUI ..> AdminController

AdminController --> User
AdminController --> Recipe
AdminController --> Plan
AdminController --> Goal
AdminController --> LogEntry

@enduml
