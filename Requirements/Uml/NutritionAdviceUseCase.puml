@startuml NutritionAdviceUseCase

' Sơ đồ Use Case chi tiết cho chức năng "Tư vấn Dinh dưỡng AI"

left to right direction

' --- Định nghĩa Actors ---
actor User
rectangle "AI Nutrition System" {
    actor "AI/NLP System" as AISystem
}

' --- Định nghĩa Use Cases ---
rectangle "Get AI Nutrition Advice" {
    usecase UC_Advice as "Get AI Nutrition Advice"

    ' Use cases con (phân rã)
    usecase UC_ProvideInfo as "Provide Goals & Characteristics"
    usecase UC_GetMenu as "Receive Menu Suggestions"
    usecase UC_EditMenu as "Request Menu Edits"

    ' Mối quan hệ
    User -- UC_Advice

    UC_Advice .> UC_ProvideInfo : <<include>>
    UC_Advice .> UC_GetMenu : <<include>>
    UC_GetMenu <. UC_EditMenu : <<extend>>

    ' Tương tác với hệ thống AI
    UC_ProvideInfo ..> AISystem : <<invoke>>
    UC_GetMenu ..> AISystem : <<invoke>>
    UC_EditMenu ..> AISystem : <<invoke>>
}

@enduml
