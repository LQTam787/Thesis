@startuml SharingModuleStaticClassDiagram

' Hide empty members
hide empty members
skinparam classAttributeIconSize 0

'====================================
' Interface/Boundary Classes (Views)
'====================================
package "Views" <<Folder>> {
    class SharingFeedView {
        +displayFeed()
        +submitComment()
        +submitLike()
    }

    class SharedItemView {
        -contentId: String
        -userId: String
        +displayContentDetails()
        +displayComments()
        +displayLikeCount()
    }

    class CommentView {
        +displayComment()
    }
}

'====================================
' Data Access Object (DAO) Interfaces
'====================================
package "DAO" <<Folder>> {
    interface ISharedContentDAO {
        +getSharedContentFeed(userId: String): List<SharedContent>
        +getSharedContentById(contentId: String): SharedContent
        +createSharedContent(content: SharedContent): boolean
    }

    interface ICommentDAO {
        +getCommentsByContentId(contentId: String): List<Comment>
        +addComment(comment: Comment): boolean
    }

    interface ILikeDAO {
        +getLikesByContentId(contentId: String): List<Like>
        +addLike(like: Like): boolean
        +removeLike(like: Like): boolean
    }
}

'====================================
' Entity Classes
'====================================
package "Entities" <<Folder>> {
    class User {
      username
      email
    }

    class SharedContent {
      sharedDate
      visibility
      contentType
    }

    class NutritionPlan {
      planName
    }

    class ActivityLog {
      durationInMinutes
    }

    class Comment {
      commentText
      commentDate
    }

    class Like {
      likeDate
    }
}

'====================================
' Relationships
'====================================

' View -> DAO
SharingFeedView ..> ISharedContentDAO : uses
SharingFeedView ..> ICommentDAO : uses
SharingFeedView ..> ILikeDAO : uses

' DAO -> Entity
ISharedContentDAO ..> SharedContent
ICommentDAO ..> Comment
ILikeDAO ..> Like

' View Composition
SharingFeedView "1" *-- "many" SharedItemView
SharedItemView "1" *-- "many" CommentView

' Entity Relationships (from analysis)
User "1" -- "0..*" SharedContent : shares
SharedContent "1" -- "0..*" Comment : has
User "1" -- "0..*" Comment : writes
SharedContent "1" -- "0..*" Like : has
User "1" -- "0..*" Like : gives

NutritionPlan --|> SharedContent
ActivityLog --|> SharedContent

@enduml
