@startuml
!theme plain
autonumber
actor "Người dùng" as user
boundary "GiaoDienTuyChonChiaSe" as gd_tccs
control "QuanLyChiaSe" as ql_cs
entity "NoiDungChiaSe" as nd_cs

user -> gd_tccs : Chọn in_CheDoCongKhai và/hoặc nhập in_DanhSachBanBe_Nhom
user -> gd_tccs : Kích hoạt sub_XacNhanChiaSe
gd_tccs -> ql_cs : thayDoiCheDoChiaSe(noiDungId, cheDo, danhSachNguoiNhan)
activate ql_cs
ql_cs -> nd_cs : update(cheDo, danhSachNguoiNhan)
nd_cs --> ql_cs : boolean
ql_cs --> gd_tccs : boolean (thành công/thất bại)
deactivate ql_cs
gd_tccs --> user : Hiển thị thông báo trạng thái
@enduml
