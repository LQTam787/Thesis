@startuml
!theme plain
autonumber
actor "Người quản trị" as admin
boundary "GiaoDienQuanLyChiTiet" as gd_qlct
control "QuanLyDoiTuongAdmin" as ql_dta
control "AI_Training_Proxy" as ai_proxy

admin -> gd_qlct : Kích hoạt "Kích hoạt huấn luyện lại AI"
gd_qlct -> ql_dta : kichHoatHuanLuyenAI()
activate ql_dta
ql_dta -> ai_proxy : thucHienHuanLuyenLai()
activate ai_proxy
ai_proxy -> ai_proxy : Thực hiện quá trình huấn luyện lại AI
ai_proxy --> ql_dta : boolean (thành công/thất bại)
deactivate ai_proxy
ql_dta --> gd_qlct : boolean
deactivate ql_dta
gd_qlct --> admin : Hiển thị out_ThongBaoTrangThai
@enduml
