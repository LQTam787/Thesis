@startuml
!theme plain
autonumber
actor "Người dùng" as user
boundary "GiaoDienXemNoiDungChiaSe" as gd_xndcs
control "QuanLyChiaSe" as ql_cs
entity "BinhLuan" as bl

user -> gd_xndcs : Nhập in_BinhLuanMoi
user -> gd_xndcs : Kích hoạt sub_GuiBinhLuan
gd_xndcs -> ql_cs : themBinhLuan(noiDungId, nguoiDungId, noiDungBinhLuan)
activate ql_cs
ql_cs -> bl ** : create(noiDungId, nguoiDungId, noiDungBinhLuan, thoiGianBinhLuan)
ql_cs --> gd_xndcs : boolean
deactivate ql_cs
gd_xndcs --> user : Cập nhật out_DanhSachBinhLuan và hiển thị thông báo trạng thái
@enduml
