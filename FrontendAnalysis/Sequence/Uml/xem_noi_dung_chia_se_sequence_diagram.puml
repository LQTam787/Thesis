@startuml
!theme plain
autonumber
actor "Người dùng" as user
boundary "GiaoDienXemNoiDungChiaSe" as gd_xndcs
control "QuanLyChiaSe" as ql_cs
entity "NoiDungChiaSe" as nd_cs
entity "BinhLuan" as bl

user -> gd_xndcs : Yêu cầu xem nội dung chia sẻ (noiDungId)
gd_xndcs -> ql_cs : xemNoiDungChiaSe(noiDungId)
activate ql_cs
ql_cs -> nd_cs : read(noiDungId)
nd_cs --> ql_cs : NoiDungChiaSe
ql_cs -> bl : readByNoiDungId(noiDungId)
bl --> ql_cs : DanhSachBinhLuan
ql_cs --> gd_xndcs : NoiDungChiaSe
deactivate ql_cs
gd_xndcs --> user : Hiển thị out_NoiDungChiaSe, out_LuotThich, out_DanhSachBinhLuan
@enduml
