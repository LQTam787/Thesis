@startuml AuthenticationModule_Analysis

' Bieu do lop phan tich cho module Xac thuc

' Dinh nghia phong cach
skinparam class {
    BackgroundColor LightBlue
    ArrowColor Black
    BorderColor Black
}

' Dinh nghia cac lop

' Lop bien (Boundary Classes)
class WelcomeUI {
    + sub_navigateToRegister
    + sub_navigateToLogin
}

class RegisterUI {
    + in_fullName
    + in_email
    + in_username
    + in_password
    + in_confirmPassword
    + sub_registerButton
    + out_errorMessage
}

class LoginUI {
    + in_username
    + in_password
    + sub_loginButton
    + out_errorMessage
}

' Lop thuc the (Entity Class)
class User {
    - username
    - email
    - password
    - fullName
    --
    + register(fullName, email, username, password): User
    + login(username, password): User
}

' Dinh nghia quan he
WelcomeUI ..> RegisterUI : "navigates to"
WelcomeUI ..> LoginUI : "navigates to"

RegisterUI ..> User : "uses"
LoginUI ..> User : "uses"

@enduml
