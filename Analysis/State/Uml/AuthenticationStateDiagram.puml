@startuml AuthenticationStateDiagram
' State Diagram for Authentication Module

title Biểu đồ Trạng thái cho Module Xác thực

[*] --> NotLoggedIn : Bắt đầu

state NotLoggedIn {
    [*] --> WelcomeScreen : Hiển thị màn hình chào mừng

    WelcomeScreen : Hệ thống hiển thị giao diện 
    WelcomeScreen : đăng ký hoặc đăng nhập

    WelcomeScreen --> RegistrationForm : người dùng chọn [Đăng ký]
    WelcomeScreen --> LoginForm : người dùng chọn [Đăng nhập]

    state RegistrationForm {
        [*] --> AwaitingInput : Hiển thị form đăng ký
        AwaitingInput --> ProcessingRegistration : người dùng [Xác nhận đăng ký]
    }

    state LoginForm {
        [*] --> AwaitingInput : Hiển thị form đăng nhập
        AwaitingInput --> ProcessingLogin : người dùng [Xác nhận đăng nhập]
    }

    ProcessingRegistration --> LoggedIn : [Thông tin hợp lệ và chưa tồn tại]
    ProcessingRegistration --> RegistrationForm : [Thông tin không hợp lệ hoặc đã tồn tại]

    ProcessingLogin --> LoggedIn : [Thông tin chính xác]
    ProcessingLogin --> LoginForm : [Thông tin không chính xác]
}

state LoggedIn {
    [*] --> MainScreen : Hiển thị giao diện chính
    MainScreen --> [*] : người dùng [Đăng xuất]
}

@enduml
